<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.synolexoil.synolexappandroidstudio151sdk422api17.LubeChangeReminder">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="#FFCE0101" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logohorizontal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="اطلاعات روغن دنده"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="365dp"
                android:layout_height="240dp"
                android:layout_below="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dandeihead" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="FLUIDMATIC SP-III"
                android:textColor="#000" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="FLUIDMATIC ATF CVT"
                android:textColor="#000" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="FLUIDMATIC ATF DCT/DSG"
                android:textColor="#000" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="FLUIDMATIC ATF D-III"
                android:textColor="#000" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="SYNCHRO 85W-90 GL-5"
                android:textColor="#000" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="SYNCHRO 75W-80 GL-4"
                android:textColor="#000" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.38"
                android:height="60dp"
                android:background="#00ffffff"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
                android:gravity="left|center"
                android:padding="6dp"
                android:text="SYNCHRO 75W-90 GL-5/GL-4"
                android:textColor="#000" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>

