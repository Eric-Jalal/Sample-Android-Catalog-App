<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.synolexoil.synolexappandroidstudio151sdk422api17.Callus"
    android:background="@drawable/mapback">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="#FFCE0101"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:src="@drawable/logohorizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/imageView17"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ثبت"
        android:id="@+id/btnSendMail"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e10b0b"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="
        دفتر مرکزی: \n ایران - تهران میدان تجریش، برج تجاری تندیس، واحد 604 \n تلفن: 02122727080
"
        android:id="@+id/textView16"
        android:layout_below="@+id/imageView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="تماس با ما"
        android:id="@+id/textView18"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14dp"
        android:paddingRight="15dp"
        android:layout_alignBottom="@+id/imageView17"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:hint="نام" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText16"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:hint="تلفن همراه" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText18"
        android:layout_below="@+id/editText16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:hint="متن پیام" />

</RelativeLayout>
