<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.synolexoil.synolexappandroidstudio151sdk422api17.khalafi">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="#FFCE0101"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:src="@drawable/logohorizontal"
        android:layout_alignTop="@+id/imageView22"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="لطفا شماره سریال کارت خودروی خود را وارد کنید."
        android:id="@+id/textView15"
        android:layout_below="@+id/imageView22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText19"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="62dp"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="استعلام"
        android:id="@+id/button14"
        android:background="#d40808"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView23"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="استعلام خلافی"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14dp"
        android:paddingRight="15dp"
        android:layout_above="@+id/textView15"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />
</RelativeLayout>
